<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control tinymce', rows: 20 %>
  </div>
  <%= f.submit 'Submit', class: 'btn-accent btn-lg' %>
<% end %>